					<div class="js-ens img-block-link col-md-4" thematique="{{ens.thematique}}">
				{% endif %}
						<div class="bg" style="background: url( {{ens.uri}} )">
						</div>
						<div class="abs">
							<a href="{{ens.url_alias}}">
							<div>
								<h2>{{ens.title}}</h2>
								<span class="distance"> _ KM du d√©part</span>
							</div>
						</a>
						</div>
				</div>
			{% endfor %}
