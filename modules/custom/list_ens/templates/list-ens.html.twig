

  {{ attach_library('bootstrap_aveyron/script-list-ens') }}

  <section class="headband" style="background-image: url({{ data.imageOnTop.uri }});">
  	<h1>{{ data.title }}</h1>

  	<div class="filter-btns">
  		<div class="col-lg-12">
  			<button class="js-btn-filter-ens btn btn-default active" thematique="all">
  				Tout
  			</button>
  		{% for thematique in data.thematiques %}
  		    <button class="js-btn-filter-ens btn btn-default" thematique="{{thematique.title}}">
  		    	{{thematique.title}}
  		    </button>
  		{% endfor %}
  		</div>
  	</div>

  	<span class="arianne">
  		<a href="{{ url('<front>') }}">Accueil</a> > <b>{{ data.title }}</b>
  	</span>
  	<span class="credit">
  	  {{ data.imageOnTop.field_image_on_top_alt }}
  	</span>
  </section>

